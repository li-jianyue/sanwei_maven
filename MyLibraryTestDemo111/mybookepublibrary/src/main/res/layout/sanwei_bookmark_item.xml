<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp">
    <RelativeLayout
        android:id="@+id/bookmark_item_color_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <yuku.ambilwarna.widget.AmbilWarnaPrefWidgetView
            android:id="@+id/bookmark_item_color"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/ll_shuqian"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="8dp">
        <TextView
            android:id="@+id/bookmark_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:ellipsize="end"
            android:textSize="15sp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/bookmark_item_booktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookmark_item_text"
            android:layout_marginTop="5dp"
            android:ellipsize="marquee"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
</LinearLayout>
